# leetcode submit region begin(Prohibit modification and deletion)
class Solution:
    def generateParenthesis(self, n):
        if n == 0:
            return []
        result = []
        self.get_parenthesis(n, n, '', result)
        return result

    # left è¡¨ç¤ºå·¦æ‹¬å·å‰©ä½™çš„ä¸ªæ•°
    # right è¡¨ç¤ºå³æ‹¬å·å‰©ä½™çš„ä¸ªæ•°
    def get_parenthesis(self, left, right, st, result):
        if left > right:  # è¿™ç§æƒ…å†µä¸ç¬¦åˆæ‹¬å·è¦æ±‚, æ¯”å¦‚())(
            return ''
        if left == 0 and right == 0:
            result.append(st)
        if left > 0:
            self.get_parenthesis(left - 1, right, st + '(', result)
        if right > 0:
            self.get_parenthesis(left, right - 1, st + ')', result)


s = Solution()
s.generateParenthesis(2)
